<Window x:Class="com.jonthysell.Chordious.WPF.DiagramStyleEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title, FallbackValue=Style Editor}" WindowStartupLocation="CenterScreen" Icon="{StaticResource ChordiousIcon}" Width="320" SizeToContent="Height" ResizeMode="NoResize">
    <StackPanel>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5" Width="100" FontWeight="Bold" Content="{Binding SelectedStyleLabel, FallbackValue=Selected Style}" ToolTip="{Binding SelectedStyleToolTip}" VerticalAlignment="Center" />
                <ComboBox Margin="5" Width="140" ItemsSource="{Binding Styles}" SelectedIndex="{Binding SelectedStyleIndex}" ToolTip="{Binding SelectedStyleToolTip}" VerticalAlignment="Center" Style="{StaticResource CleanComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Level}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <GroupBox Header="{Binding SelectedStyle.SummaryLabel, FallbackValue=Summary}" ToolTip="{Binding SelectedStyle.SummaryToolTip}" Margin="5">
                <TextBox Margin="5" Text="{Binding SelectedStyle.Summary, Mode=OneWay}" Height="30" IsReadOnly="True" IsManipulationEnabled="False" TextWrapping="Wrap" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" />
            </GroupBox>
        </StackPanel>
        <TabControl Margin="5" IsEnabled="{Binding SelectedStyle.IsEditable}">
            <TabItem Header="Layout">
                <StackPanel Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5" IsChecked="{Binding SelectedStyle.OrientationIsLocal}" VerticalAlignment="Center" Content="{Binding SelectedStyle.SelectedOrientationLabel, FallbackValue=Orientation}" ToolTip="{Binding SelectedStyle.SelectedOrientationToolTip}" />
                        <ComboBox Margin="5" Width="95" ItemsSource="{Binding SelectedStyle.Orientations}" SelectedIndex="{Binding SelectedStyle.SelectedOrientationIndex}" ToolTip="{Binding SelectedStyle.SelectedOrientationToolTip}" IsEnabled="{Binding SelectedStyle.OrientationIsLocal}" VerticalAlignment="Center" Style="{StaticResource CleanComboBox}"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
        <WrapPanel FlowDirection="RightToLeft" Height="Auto">
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                <Button Command="{Binding Apply}" Content="Apply" Width="75" Margin="5" Style="{StaticResource CleanButton}"/>
                <Button Command="{Binding Accept}" Content="OK" Width="75" Margin="5" Style="{StaticResource CleanButton}"/>
                <Button Command="{Binding Cancel}" Content="Cancel" Width="75" Margin="5" Style="{StaticResource CleanButton}"/>
            </StackPanel>
        </WrapPanel>
    </StackPanel>
</Window>
