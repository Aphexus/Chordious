<Window x:Class="com.jonthysell.Chordious.WPF.TextPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title, FallbackValue=Prompt Title}" WindowStartupLocation="CenterScreen" Icon="{StaticResource ChordiousIcon}" MinWidth="400" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=InputTextBox}">
        <Label Content="{Binding Prompt}" Height="Auto" Margin="5"/>
        <TextBox Name="InputTextBox" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" SelectedText="" Height="Auto" Margin="5" MaxLines="1" />
        <WrapPanel FlowDirection="RightToLeft" Height="Auto">
            <Button Command="{Binding Cancel}" Content="Cancel" Width="75" Margin="5" Style="{StaticResource CleanButton}"/>
            <Button Command="{Binding Accept}" Content="OK" Width="75" Margin="5" IsDefault="True" Style="{StaticResource CleanButton}"/>
        </WrapPanel>
    </StackPanel>
</Window>
