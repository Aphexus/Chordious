<Window x:Class="com.jonthysell.Chordious.WPF.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title, FallbackValue=Confirmation Title}" WindowStartupLocation="CenterScreen" Icon="{StaticResource ChordiousIcon}" Width="480" MinHeight="100" SizeToContent="Height" ResizeMode="NoResize">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource WarningIcon32}" Margin="15" VerticalAlignment="Top" />
            <Label Height="Auto" Width="390" Margin="5" VerticalAlignment="Center">
                <Label.Content>
                    <AccessText TextWrapping="Wrap" Text="{Binding Message}" />
                </Label.Content>
            </Label>
        </StackPanel>
        <WrapPanel FlowDirection="RightToLeft">
            <Button Command="{Binding Reject}" Content="No" Width="75" Margin="5" IsDefault="True" Style="{StaticResource CleanButton}" />
            <Button Command="{Binding Accept}" Content="Yes" Width="75" Margin="5" Style="{StaticResource CleanButton}" />
        </WrapPanel>
    </StackPanel>
</Window>
